<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009688"
    tools:context="com.example.admin.courtcounter.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">


    </LinearLayout>


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="33dp"
        android:layout_toEndOf="@+id/linearLayout"
        android:layout_toRightOf="@+id/linearLayout"
        android:text="HOME"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnThree_tmA"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="38dp"
        android:layout_marginRight="38dp"
        android:text="AWAY"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </LinearLayout>


    <Button
        android:id="@+id/btnThree_tmA"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="153dp"
        android:background="#4CAF50"
        android:alpha="0.45"
        android:text="+3points"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnThree_tmB"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:background="#4CAF50"
        android:layout_alignTop="@+id/btnThree_tmA"
        android:alpha="0.45"
        android:text="+3points"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:background="#4CAF50"
        android:alpha="0.75"
        android:text="RESET" />

    <Button
        android:id="@+id/btnTwo_tmA"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnThree_tmA"
        android:layout_alignStart="@+id/btnThree_tmA"
        android:layout_below="@+id/btnThree_tmA"
        android:layout_marginTop="19dp"
        android:background="#4CAF50"
        android:alpha="0.45"
        android:text="+2Points"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnTwo_tmB"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnThree_tmB"
        android:layout_alignRight="@+id/btnThree_tmB"
        android:layout_alignTop="@+id/btnTwo_tmA"
        android:background="#4CAF50"
        android:alpha="0.45"
        android:text="+2Points"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnFreeThrowA"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnTwo_tmA"
        android:layout_alignRight="@+id/btnTwo_tmA"
        android:layout_below="@+id/btnTwo_tmA"
        android:background="#F44336"
        android:layout_marginTop="19dp"
        android:alpha="0.45"
        android:text="Free Throw"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnFreeThrowB"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnFreeThrowA"
        android:layout_alignEnd="@+id/btnTwo_tmB"
        android:layout_alignRight="@+id/btnTwo_tmB"
        android:alpha="0.45"
        android:background="#F44336"
        android:text="Free Throw"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/teamA_sore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="0"
        android:textSize="50sp"
        android:layout_above="@+id/btnThree_tmB"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:id="@+id/teamB_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/teamA_sore"
        android:layout_alignBottom="@+id/teamA_sore"
        android:layout_toRightOf="@+id/btnReset"
        android:text="0"
        android:textSize="50sp" />


</RelativeLayout>
